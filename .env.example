# Query Generator - Unified Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
POSTGRES_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=qg
POSTGRES_USER=qg
POSTGRES_PASSWORD=qg
POSTGRES_HOST=postgres

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=Administrator

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# OpenAI Configuration (REQUIRED)
# Created via https://platform.openai.com/settings/organization/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
EMBED_MODEL=text-embedding-3-large
GEN_MODEL=gpt-4o

# Security Configuration (REQUIRED)
# Generate a secret key with one of these methods:
#   Python:  python -c "import secrets; print(secrets.token_hex(32))"
#   OpenSSL: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_change_this_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Embedding Settings
MAX_CHUNKS=12
EMBEDDING_DIMENSION=3072
BATCH_SIZE=64

# Generation Settings
MAX_TOKENS=2000
TEMPERATURE=0.1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_PORT=8000
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=false
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_FEEDBACK_ENABLED=true

# Application Settings
NEXT_PUBLIC_APP_NAME=Query Generator
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered SQL query generation from natural language
